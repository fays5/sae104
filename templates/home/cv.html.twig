    <div class="container content">
    <h2>Télécharger mon CV</h2>
    <form action="#" method="post">
        <div class="mb-3">
            <label for="nom" class="form-label">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom" required pattern=".+" title="Veuillez entrer votre nom" lang="fr">
        </div>
        <div class="mb-3">
            <label for="prenom" class="form-label">Prénom</label>
            <input type="text" class="form-control" id="prenom" name="prenom" required pattern=".+" title="Veuillez entrer votre prénom" lang="fr">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Adresse e-mail</label>
            <input type="email" class="form-control" id="email" name="email" required title="Veuillez entrer une adresse e-mail valide" lang="fr">
        </div>
        <div class="mb-3">
            <label for="genre" class="form-label">Genre</label>
            <select class="form-select" id="genre" name="genre" required lang="fr">
                <option value="">Sélectionnez...</option>
                <option value="homme">Homme</option>
                <option value="femme">Femme</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">
            <a href="cvsite.png" download="cvsite.png" style="color: white; text-decoration: none;">Confirmer</a>
        </button>
    </form>
</div>
